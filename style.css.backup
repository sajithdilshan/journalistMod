input.submit,

input[type=submit] {

margin: 0px;

padding: 2px 5px 2px;

/* Elementary Button Style for searh widget by http://rejmer.net/elementary_buttons */



/* BORDER */

border: 1px solid #a9a9a9;

-webkit-border-top-colors: #a9a9a9 #fff;

-webkit-border-right-colors: #a9a9a9 #fff;

-webkit-border-bottom-colors: #a9a9a9 #fff;

-webkit-border-left-colors: #a9a9a9 #fff;

-moz-border-top-colors: #a9a9a9 #fff;

-moz-border-right-colors: #a9a9a9 #fff;

-moz-border-bottom-colors: #a9a9a9 #fff;

-moz-border-left-colors: #a9a9a9 #fff;

border-top-colors: #a9a9a9 #fff;

border-right-colors: #a9a9a9 #fff;

border-bottom-colors: #a9a9a9 #fff;

border-left-colors: #a9a9a9 #fff;

-moz-border-radius: 2px;

-webkit-border-radius: 2px;

border-radius: 2px;



/* TEXT */

font: normal 11px !important;

color: #5a5a5a;

text-decoration: none;

text-shadow: 0px 0px 2px #c0c0c0, 0px 1px 0px #f0f0f0;



/* BACKGROUND */

background-color: #ededed;

background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#fefefe), to(#e7e7e7), color-stop(.05,#fbfbfb), color-stop(.95,#dedede));

background: -moz-linear-gradient(top, #fefefe, #fbfbfb 5%, #dedede 95%, #e7e7e7 100%);

filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#FFFFFF, endColorstr=#dedede); /*not tested*/

-ms-filter: "progid:DXImageTransformansform.Microsoft.gradient(startColorstr=#FFFFFF, endColorstr=#dedede)"; /*not tested*/



/* SHADOW */

-webkit-box-shadow: 0px 0px 1px #afafaf;

-moz-box-shadow: 0px 0px 1px #afafaf;

box-shadow: 0px 0px 1px #afafaf;

}



input.submit:hover,

input[type=submit]:hover {

/* BORDER */

border-color: #9cabb6;



/* TEXT */

color: #34444e;

text-shadow: 0px 0px 2px #d2dde6, 0px 1px 0px #e6edf3;



/* BACKGROUND */

background-color: #d4e0eb;

background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#f1f7fb), to(#cfdbe6), color-stop(.05,#e9f1f7), color-stop(.95,#bdcedd));

background: -moz-linear-gradient(top, #f1f7fb, #e9f1f7 5%, #bdcedd 95%, #cfdbe6 100%);

filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#E9F1F7, endColorstr=#bdcedd); /*not tested*/

-ms-filter: "progid:DXImageTransformansform.Microsoft.gradient(startColorstr=#E9F1F7, endColorstr=#bdcedd)"; /*not tested*/

}



