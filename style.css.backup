/* Self-clear floats */



.group:after {

content: "."; 

display: block; 

height: 0; 

clear: both; 

visibility: hidden;

}



/* IE Hacks */



*html #bubble {

display:none;

}



*html #bubble p {

display:none;

}



* html .group,

* html #nav ul li a {

height: 1%;

}



*:first-child+html .group {

min-height: 1px;

}



* html #nav ul li a {

display: inline;

}

